<Window x:Class="InventoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Alat Tulis" Height="500" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Kode Barang"/>
            <TextBox x:Name="txtKode"/>

            <TextBlock Text="Nama Barang"/>
            <TextBox x:Name="txtNama"/>

            <TextBlock Text="Kategori"/>
            <TextBox x:Name="txtKategori"/>

            <TextBlock Text="Jumlah"/>
            <TextBox x:Name="txtJumlah"/>

            <TextBlock Text="Harga"/>
            <TextBox x:Name="txtHarga"/>

            <Button Content="Simpan Barang" Margin="0,10,0,0" Click="Simpan_Click"/>
            <Button Content="Edit Barang" Click="Edit_Click"/>
            <Button Content="Transaksi Masuk" Click="BarangMasuk_Click"/>
            <Button Content="Transaksi Keluar" Click="BarangKeluar_Click"/>
            <Button Content="Cari Barang" Click="Cari_Click"/>
            <Button Content="Laporan Stok Akhir" Click="Laporan_Click"/>
        </StackPanel>
    </Grid>
</Window>
