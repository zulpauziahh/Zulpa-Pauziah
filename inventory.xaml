<Window x:Class="InventoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Inventory Alat Tulis" Height="550" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Input Data Barang" FontSize="20"/>
            <TextBox x:Name="txtKode" Margin="0,5" PlaceholderText="Kode Barang"/>
            <TextBox x:Name="txtNama" Margin="0,5" PlaceholderText="Nama Barang"/>
            <TextBox x:Name="txtKategori" Margin="0,5" PlaceholderText="Kategori"/>
            <TextBox x:Name="txtJumlah" Margin="0,5" PlaceholderText="Jumlah"/>
            <Button Content="Simpan Barang" Margin="0,10" Click="Simpan_Click"/>

            <TextBlock Text="Transaksi Barang Masuk" FontWeight="Bold"/>
            <TextBox x:Name="txtMasukKode" Margin="0,5" PlaceholderText="Kode Barang"/>
            <TextBox x:Name="txtJumlahMasuk" Margin="0,5" PlaceholderText="Jumlah Masuk"/>
            <Button Content="Tambah Stok" Click="TambahStok_Click"/>

            <TextBlock Text="Transaksi Barang Keluar" FontWeight="Bold" Margin="10,10,0,0"/>
            <TextBox x:Name="txtKeluarKode" Margin="0,5" PlaceholderText="Kode Barang"/>
            <TextBox x:Name="txtJumlahKeluar" Margin="0,5" PlaceholderText="Jumlah Keluar"/>
            <Button Content="Kurangi Stok" Click="KurangiStok_Click"/>

            <TextBlock Text="Pencarian Barang" FontWeight="Bold" Margin="10,10,0,0"/>
            <TextBox x:Name="txtCari" Margin="0,5" PlaceholderText="Nama/Kode"/>
            <Button Content="Cari Barang" Click="Cari_Click"/>

            <Button Content="Lihat Laporan Stok Akhir" Margin="10" Click="Laporan_Click"/>
        </StackPanel>
    </Grid>
</Window>
